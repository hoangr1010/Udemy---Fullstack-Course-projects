<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="What is Title?" name="title">
  </div>

  <div class="form-group">
    <label for="composeInput">Post</label>
    <textarea class="form-control" id="composeInput" rows="10" name="postBody"></textarea>
  </div>

  <button class="btn btn-primary">Publish</button>
</form>
  
